<h2>Edit</h2>

<%= form_for @user, :url => admin_user_path(@user) do |f| %>
  <%# devise_error_messages! %>

  <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_area :bio %>
  </div>

  <% if current_user.admin? %>
    <div class="field">
      <%= f.label :role %><br />
      <%= f.select :role, ["admin", "user"] %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= link_to "Back", :back %>
