<h1>Topics</h1>

<%= link_to new_topic_path, :class => "btn btn-primary" do %>
  New Topic
<% end %>

<table class="table table-striped table-bordered">
  <tr>
    <td>Topic</td>
    <td>Category</td>
    <td>Author</td>
    <td>Replies</td>
    <td><%= link_to "Views", topics_path(:sort => "views", :order => "desc") %></td>
    <td><%= link_to "Updated", topics_path(:sort => "updated_at", :order => "desc") %></td>
  </tr>

  <% @topics.each do |t| %>
    <tr>
      <td><%= link_to t.title, topic_path(t) %></td>
      <td><%= t.category_ids.to_s %></td>
      <td><%= t.user.username %></td>
      <td><%= t.comments.size %></td>
      <td><%= t.views %></td>
      <td><%= t.updated_at %></td>
    </tr>
  <% end %>
</table>

<%= paginate @topics %>
